        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Button x:Name="btn" 
                Width="100" 
                Height="50"
                Click="btn_Click"
                Visibility="Collapsed">

        </Button>
        <Button x:Name="btn2" 
                Width="100"
                Height="100"
                Visibility="Collapsed">
            <Button.Background>
                <SolidColorBrush x:Name="greenBrush" Color="Green" Opacity="1"/>
            </Button.Background>

        </Button>
        <Canvas Background="AliceBlue" Visibility="Collapsed">
            <Ellipse x:Name="ball"
                     Width="40"
                     Height="40"
                     Canvas.Bottom="0"
                     Canvas.Left="380">
                <Ellipse.Fill>
                    <SolidColorBrush x:Name="solidBr" Color="Green"/>
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>
        <Canvas Background="CadetBlue"
                Visibility="Collapsed">
            <Ellipse x:Name="circle"
                     Width="50"
                     Height="50"
                     Canvas.Bottom="0"
                     Canvas.Left="200">
                <Ellipse.Fill>
                    <RadialGradientBrush
                        RadiusX="1"
                        RadiusY="1"
                        GradientOrigin="0.3, 0.3">
                        <GradientStop Color="White" Offset="0"/>
                        <GradientStop Color="DarkOrange" Offset="0.4"/>
                        <GradientStop Color="DarkOrange" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>

        <Canvas Background="Coral">
            <!--<Path Stroke="Aqua"
