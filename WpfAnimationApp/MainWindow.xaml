            <Path Stroke="Red"
                  StrokeThickness="3"
                  Data="{StaticResource pathTrue}"/>
            <Ellipse Width="40"
                     Height="40"
                     Fill="Yellow"
                     x:Name="disk"/>
        </Canvas>

        <Button Grid.Row="1"
                Margin="20"
                Width="100"
                Height="50"
                Content="Start"/>
