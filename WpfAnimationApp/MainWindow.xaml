        <EventTrigger RoutedEvent="Button.Click">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimationUsingPath
                        Storyboard.TargetName="disk"
                        Storyboard.TargetProperty="(Canvas.Top)"
                        Duration="0:0:5"
                        RepeatBehavior="2x"
                        PathGeometry="{StaticResource path}"
                        Source="Y"/>
                    <DoubleAnimationUsingPath
                        Storyboard.TargetName="disk"
                        Storyboard.TargetProperty="(Canvas.Left)"
                        Duration="0:0:5"
                        RepeatBehavior="2x"
                        PathGeometry="{StaticResource path}"
                        Source="X"/>                    
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
